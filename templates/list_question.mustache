<div class="card mt-5">
    <div class="card-header">
        <h3 class="d-inline">List questions</h3>
    </div>
    <div class="card-body">
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">No.</th>
                    <th scope="col">Bobot Nilai</th>
                    <th scope="col">Question</th>
                    <th scope="col">Action</th>
                </tr>
            </thead>
            <tbody>
                {{#questions}}
                <tr>
                    <th scope="row">{{number}}</th>
                    <td>{{ bobotnilai }}</td>
                    <td>{{ question }}</td>
                    <td>
                        <a class="btn btn-outline-primary" href="{{ editUrl}}">Edit</a>
                        <form method="POST" class="d-inline">
                            <input type="hidden" name="question_id" value="{{id}}">
                            <button type="submit" class="btn btn-outline-danger" name="delete">Delete</button>
                        </form>
                    </td>
                </tr>
                {{/questions}}
            </tbody>
        </table>
    </div>
</div>